{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block vue %}
    <div class="album py-5 bg-light">
        <div class="container-fluid">
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-2">
                        <div class="card mb-3 box-shadow">
                            <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="{{ article.image }}" data-holder-rendered="true">
                            <div class="card-body">
                                <p class="card-text">Libelle: {{ article.libelle}} </p>
                                <p class="card-text">Prix Unitaire: {{ article.prix}} </p>
                                <p class="card-text">Quantit√© en stock: {{ article.quantite}} </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('show', {"id": article.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">Voir</button></a>
                                        <a href=""><button type="button" class="bi bi-cart-plus">Ajouter au panier</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if app.user %}
                <a href="{{ path('new') }}"><button class="btn btn-primary">Ajouter un produit</button> </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
