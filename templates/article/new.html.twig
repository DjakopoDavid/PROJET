{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block vue %}
    <h1>Ajouter un produit</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.libelle) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prix) }}
        </div>
        <div class="form-group">
            {{ form_row(form.quantite) }}
        </div>
        <div class="form-group">
            {{ form_row(form.image) }}
        </div>
    <button>Ajouter</button>
    {{ form_end(form) }}


{% endblock %}
